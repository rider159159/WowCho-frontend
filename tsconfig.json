{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts", "src/**/*.d.ts", "src/**/*.tsx","src/**/*.vue","./window.d.ts","./components.d.ts","./auto-imports.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
